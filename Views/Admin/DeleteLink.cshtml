@model linkHomeApp.Models.Link

<h2>Delete Link</h2>
<p>Are you sure you want to delete this link?</p>

<div>
    <strong>Label:</strong> @Model.Label <br />
    <strong>URL:</strong> @Model.Url <br />
    <strong>Category:</strong> @Model.Category?.Title
</div>

<form asp-action="DeleteLinkConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="AdminIndex" class="btn btn-secondary">Cancel</a>
</form>
